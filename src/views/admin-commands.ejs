            html: '<form class="mt-5" action="/dashboard/commands/create" method="post">' +
                '<div class="form-horizontal">' +
                '<div class="form-group row">' +
                '<div class="col-sm-10 offset-1">' +
                '<input autofocus class="form-control" name="name" placeholder="Nombre" /></div></div>' +
                '<div class="form-group row">' +
                '<div class="col-sm-10 offset-1">' +
                '<input class="form-control" name="description" placeholder="Descripci贸n" /></div></div>' +
                '<div class="form-group row">' +
                '<div class="col-sm-10 offset-1">' +
                '<textarea class="form-control" cols="20" name="action" maxlength="32000" rows="7" placeholder="Acci贸n"></textarea></div></div>' +
                '<div class="form-group row">' +
                '<label class="col-form-label col-sm-2"></label>' +
                '<div class="col-sm-10 offset-1">' +
                '<input type="submit" value="Crear" class="btn btn-default btn-success mt-3" />' +
                '</div></div></div></form>',
            showConfirmButton: false,
            showCancelButton: true,
            focusConfirm: false,
            cancelButtonText: 'Cancelar'
        })
    })
</script>

